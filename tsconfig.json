{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "src/types/**/*.d.ts", // Убедитесь, что добавили путь к типам
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}